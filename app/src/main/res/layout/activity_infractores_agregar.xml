                        android:backgroundTint="#3D96FF"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imag56756eView20"
                            android:layout_width="160dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="12dp"
                            app:srcCompat="@drawable/button_upload" />

                        <TextView
                            android:id="@+id/textVie567567w27"
                            android:layout_width="207dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Subir foto"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textV456456456iew28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Datos generales"
                    android:textColor="#5B5B5B"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/Infractores_Agregar_txtNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/rounded_corners_all"
                    android:ems="10"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Nombre"
                    android:maxLength="50"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:textColor="#000000"
                    android:textColorHint="#8E8E8E"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/Infractores_Agregar_txtApellido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/rounded_corners_all"
                    android:ems="10"
                    android:fontFamily="@font/poppins_medium"
