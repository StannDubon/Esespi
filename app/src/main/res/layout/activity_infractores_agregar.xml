                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corners_all"
                        android:backgroundTint="#FFFFFF"
                        android:textSize="19sp"
                        android:theme="@style/SpinnerFontStyle" />
