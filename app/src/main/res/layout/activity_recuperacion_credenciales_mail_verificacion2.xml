<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_recuperacion_credenciales_mail_verificacion">

    <Button
        android:id="@+id/btnVerificarCodigo"
        android:layout_width="334dp"
        android:layout_height="55dp"
        android:background="@drawable/rounded_corners_all"
        android:backgroundTint="#28E57F"
        android:elevation="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="10dp"
        android:text="Verificar"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.948" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_extrabold"
        android:text="Verificar correo"
        android:textAlignment="center"
        android:textColor="#403F71"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.292"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.241" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="151dp"
        android:layout_height="77dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066"
        app:srcCompat="@drawable/logo_name_right" />

    <EditText
        android:id="@+id/recuperacionCredencialesMailVerificacionTxtCodigo"
        android:layout_width="333dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corners_all"
        android:elevation="20dp"
        android:ems="10"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Codigo de verificaciÃ³n"
        android:inputType="number"
        android:maxLength="8"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#000000"
        android:textColorHint="#8C8C8C"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.413" />

    <Button
        android:id="@+id/recuperacionCredencialesMailVerificacionBtnReenviarCodigo"
        android:layout_width="334dp"
        android:layout_height="55dp"
        android:background="@drawable/rounded_corners_all"
        android:backgroundTint="#4399FF"
        android:elevation="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="10dp"
        android:text="reenviar codigo"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.557" />
</androidx.constraintlayout.widget.ConstraintLayout>